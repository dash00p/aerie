<h1>
    <%= lng.CONNECTION %>
</h1>
<!-- show any messages that come back with authentication -->
<% if (Object.keys(message).length > 0) { %>
    <div class="alert alert-<%= message.type %>"><%= message.text %></div>
<% } %>
<form class="col-md-8" action="login" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputUsername1"><%= lng.USERNAME %></label>
            <input type="text" class="form-control" id="inputUsername1" placeholder="<%= lng.USERNAME %>" name="username" required>
        </div>
        <div class="form-group col-md-6">
            <label for="inputPassword4"><%= lng.PASSWORD %></label>
            <input type="password" class="form-control" id="inputPassword1" placeholder="<%= lng.PASSWORD %>" name="password" required>
        </div>
    </div>
    <button type="submit" class="btn btn-primary"><%=lng.LOG_IN%></button>
</form>
<hr class="col-md-8 ml-1" />
<h1>
    <%= lng.INSCRIPTION %>
</h1>
<form class="col-md-8" action="user/new" method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4"><%= lng.USERNAME %></label>
                <input type="text" class="form-control" id="inputUsername2" placeholder="<%= lng.USERNAME %>" name="sub_username" required>
            </div>
            <div class="form-group col-md-6">
                <label for="inputPassword4"><%= lng.PASSWORD %></label>
                <input type="password" class="form-control" id="inputPassword2" placeholder="<%= lng.PASSWORD %>" name="sub_password" required>
            </div>
            <div class="form-group col-md-6">
                    <label for="inputEmail4">Email</label>
                    <input type="email" class="form-control" id="inputEmail" placeholder="Email" name="sub_email" required>
                </div>
        </div>
        <button type="submit" class="btn btn-primary"><%=lng.SIGN_IN%></button>
    </form>