                <span class="switch switch-sm">
                    <input type="checkbox" class="switch"
                        <% if(typeof cookies.nightmode !== 'undefined'){ %>checked<% } %> id="switchNightMode">
                    <label for="switchNightMode">
                        <a class="utility">
                            <i class="far fa-moon"></i>
                            <%=lng.NIGHT_MODE%>
                        </a>
                    </label>
                </span>
            </div>
        </li>
        <li>
            <% if(typeof isAuthenticated !== 'undefined'){ %>
            <a href="/logout"><%=lng.LOG_OUT%></a>
