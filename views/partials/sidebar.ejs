        <% } %>
        <% if(user.rank > 2){ %>
        <li>
            <a href="/registry" class="<%=(locals.pagename==="registry"?"active":"")%>"><%=lng.REGISTRY_ANEKSI%></a>
        </li>
        <% } %>
        <li>
            <a href="/event" class="<%=(locals.pagename==="event"?"active":"")%>"><%=lng.EVENTS%></a>
        </li>

        <% } %>
