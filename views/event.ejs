<h1>
    <%= lng.EVENTS %>
</h1>
<section ng-controller="eventCtrl as eVm">
    <div id="calendar" ui-calendar="eVm.uiConfig.calendar" ng-model="eVm.eventSources"></div>
    <div id="newEventModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p></p>
                    <div class="form-group">
                            <label for="title">Titre</label>
                            <input type="text" class="form-control" id="title" ng-model="eVm.newEvent.title">
                        </div>
                    <div class="form-group">
                        <label for="dateStart">DÃ©but</label>
                        <input type="datetime-local" class="form-control" id="dateStart" ng-model="eVm.newEvent.start">
                    </div>
                    <div class="form-group">
                        <label for="dateEnd">Fin</label>
                        <input type="datetime-local" class="form-control" id="dateEnd" ng-model="eVm.newEvent.end">
                    </div>
                    <p>{{eVm.newEvent | json }}</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" ng-click="eVm.saveEvent()">Save changes</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</section>
<%- contentFor('script') %>
<script src="/javascripts/events.js"></script>